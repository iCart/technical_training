<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Partner views: list view, form view, and search filter -->
        <record model="ir.ui.view" id="library_partner_action_list">
            <field name="name">Partner List</field>
            <field name="model">res.partner</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Search Partners">
                    <field name="name"/>
                    <field name="rentals"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="library_partners_action_form">
            <field name="name">Partners Form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="is_author"/>
                    </group>
                    <notebook>
                        <page string="Rentals">
                            <field name="rentals"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="library_partner_search">
            <field name="name">Partner Search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Is Author" domain="[('is_author', '=', True)]" name="is_author_filter"/>
                    <filter string="Is Customer" domain="['&amp;', ('is_author', '=', False), ('rentals', '!=', False)]" name="is_customer_filter"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="library_partner_action">
            <field name="name">Partners</field>
            <field name="res_model">res.partner</field>
            <field name="views">tree,form</field>
            <field name="view_id" ref="library_partner_action_list"/>
            <field name="search_view_id" ref="library_partner_search"/>
            <field name="context">{"search_default_is_customer_filter":1}</field>
        </record>

        <menuitem name="Partners" id="library.menu_partner_list" parent="library.menu_root"
                  action="library_partner_action"/>

    </data>
</odoo>