<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library.customer_form" model="ir.ui.view">
        <field name="name">library.customer_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="before">
                <group>
                    <field name="total_owed" string="Total Owed"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="library.customer_search" model="ir.ui.view">
        <field name="name">library.customer_search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="total_owed"/>
            </field>
        </field>
    </record>

    <record id="partner_action" model="ir.actions.act_window">
        <field name="name">Partners</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="publisher_action" model="ir.actions.act_window">
        <field name="name">Publishers</field>
        <field name="res_model">library.publisher</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>