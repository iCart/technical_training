<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Author views: form view, list view, and search filter -->
        <record model="ir.ui.view" id="library_author_action_form">
            <field name="name">Author Form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="is_author"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="library_author_action_list">
            <field name="name">Author List</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Search Authors">
                    <field name="name"/>
                    <field name="is_author"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="library_author_search">
            <field name="name">Author List</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter string="Is Author" domain="[('is_author', '=', True)]" name="is_author_filter"/>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="library_author_action">
            <field name="name">Authors</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="library_author_search"/>
            <field name="context">{"search_default_is_author_filter":1}</field>
        </record>

        <menuitem name="Authors" id="library.menu_author_list" parent="library.menu_root"
                  action="library_author_action"/>

    </data>
</odoo>