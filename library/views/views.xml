<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Book views: list view and form view -->
        <record model="ir.ui.view" id="library.book_list">
            <field name="name">Book List</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="authors" widget="many2many_tags"/>
                    <field name="year_of_edition"/>
                    <field name="isbn"/>
                    <field name="language"/>
                    <field name="editor"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="library.book_form">
            <field name="name">Edit Book</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="title"/>
                        <field name="editor"/>
                    </group>
                    <group>
                        <field name="year_of_edition"/>
                        <field name="isbn"/>
                        <field name="language"/>
                    </group>
                    <notebook>
                        <page string="Author(s)">
                            <field name="authors"/>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="library.action_window">
            <field name="name">Books</field>
            <field name="res_model">library.book</field>
            <field name="views">tree,form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a book.
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Library" id="library.menu_root"/>
        <!-- actions -->
        <menuitem name="List" id="library.menu_1_list" parent="library.menu_root"
                  action="library.action_window"/>
    </data>
</odoo>