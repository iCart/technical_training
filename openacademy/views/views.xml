<odoo>
    <data>
        <!--     explicit list view definition-->
        <record model="ir.ui.view" id="openacademy.course_list">
            <field name="name">openacademy_course_list</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="openacademy.session_list">
            <field name="name">openacademy_session_list</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="course_id"/>
                    <field name="level_id"/>
                    <field name="start"/>
                    <field name="end"/>
                    <field name="taken_seats" widget="progressbar" string="Taken seats"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="openacademy.session_form">
            <field name="name">openacademy_session_form</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar"/>
                        </header>
                        <div class="oe_button_box">
                            <BUTTONS/>
                        </div>
                        <group>
                            <group>
                                <field name="start"/>
                                <field name="end"/>
                            </group>
                            <group>
                                <field name="level_id"/>
                                <field name="room_size"/>
                            </group>
                        </group>
                        <group>
                            <field name="course_id"/>
                            <field name="instructor_id"/>
                        </group>
                        <notebook>
                            <page string="Attendees">
                                <field name="taken_seats" widget="progressbar" string="Taken seats"/>
                                <field name="attendee_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="openacademy.session_calendar">
            <field name="name">openacademy_session_calendar</field>
            <field name="model">openacademy.session</field>
            <field name="arch" type="xml">
                <calendar
                        date_start="start"
                        date_stop="end"
                        color="course_id"
                >
                </calendar>
            </field>
        </record>


        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="openacademy.course_action_window">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="openacademy.session_action_window">
            <field name="name">Sessions</field>
            <field name="res_model">openacademy.session</field>
            <field name="view_mode">tree,form,calendar</field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Open Academy"
                  id="openacademy.menu_root"
                  web_icon="openacademy,static/description/icon.png"
        />
        <!-- menu categories -->
        <menuitem name="Courses" id="openacademy.menu_course" parent="openacademy.menu_root" action="openacademy.course_action_window"/>
        <menuitem name="Sessions" id="openacademy.menu_session" parent="openacademy.menu_root" action="openacademy.session_action_window"/>
    </data>
</odoo>